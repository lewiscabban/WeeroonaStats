  <div class="container-fluid crud-player">
    <div id="heading">
      <h1>Edit Player</h1>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="box">
          <form class="item" action="/players/<%= player._id %>/editPlayer" method="POST">
            <div class="form-inputs">
              <label><b>First Name </b></label>
              <input value="<%= player.firstName %>" type="text" name="firstName" placeholder="First Name" autocomplete="off">
            </div>
            <div class="form-inputs">
              <label><b>Last Name </b></label>
              <input value="<%= player.lastName %>" type="text" name="lastName" placeholder="Last Name" autocomplete="off">
            </div>
            <div class="form-inputs">
              <label><b>Address </b></label>
              <input value="<%= player.address %>" type="text" name="address" placeholder="Address" autocomplete="off">
            </div>
            <div class="form-inputs">
              <label><b>Suburb </</label></b></label>
              <input value="<%= player.suburb %>" type="text" name="suburb" placeholder="Suburb" autocomplete="off">
            </div>
            <div class="form-inputs">
              <label><b>State </b></label>
              <input value="<%= player.state %>" type="text" name="state" placeholder="State" autocomplete="off">
            </div>
            <div class="form-inputs">
              <label><b>Postcode </b></label>
              <input value="<%= player.postcode %>" type="text" name="postcode" placeholder="Postcode" autocomplete="off">
            </div>
            <div class="form-inputs">
              <label><b>Home Number </b></label>
              <input value="<%= player.homeNumber %>" type="text" name="homeNumber" placeholder="Home Number" autocomplete="off">
            </div>
            <div class="form-inputs">
              <label><b>Mobile Number </b></label>
              <input value="<%= player.mobileNumber %>" type="text" name="mobileNumber" placeholder="Mobile Number" autocomplete="off">
            </div>  
            <div class="form-inputs">
              <label><b>Fax Number </b></label>
              <input value="<%= player.faxNumber %>" type="text" name="faxNumber" placeholder="Fax Number" autocomplete="off">
            </div>
            <button class="btn submit-button" type="submit" value="Submit">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>


